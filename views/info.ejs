<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    /* Custom CSS */
    body {
      font-family: Arial, sans-serif;
    }

    header {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 2rem 0;
      margin-bottom: 2rem;
    }

    .section {
      padding: 3rem 0;
    }

    .about-photo {
      max-width: 300px;
      margin-right: 30px;
      border: 5px solid #fff;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      display: block;
      margin: 0 auto;
      /* Center the photo horizontally */
    }

    .social-icons {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
    }

    .social-icons li {
      margin-right: 10px;
    }

    .social-icons a {
      color: #333;
      font-size: 24px;
      transition: color 0.3s ease;
    }

    .social-icons a:hover {
      color: #007bff;
    }

    .footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 1rem 0;
    }

    #emergencyButton {
      margin-right: 10px;
    }
  </style>
  <title>Meet Vandana</title>
</head>

<body>
  <header>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-4">
          <button id="emergencyButton" class="btn btn-danger">Emergency Contact</button>
        </div>
        <div id="emergencyDetails" style="display: none;">
          <h2>Emergency Contact Details</h2>
          <% profile.emergencyContacts.forEach((emergencyContact)=> { %>
            <p>Name: <%= emergencyContact.name %>
            </p>
            <p>Phone Number:
              <a href="tel:<%= emergencyContact.phoneNumber %>" class="text-decoration-none">
                <i class="fas fa-phone"></i>
                <%= emergencyContact.phoneNumber %>
              </a>
            </p>
            <% } )%>
        </div>



      </div>
    </div>
    <div class="col-md-4 text-center">
      <h1>Meet <%= profile.name %>
      </h1>
    </div>

    </div>

  </header>

  <section id="about" class="section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <img src="<%= profile.photo %>" alt="<%= profile.name %>'s Photo"
            class="img-fluid rounded-circle about-photo">
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <% if (profile.about) { %>
            <h2>About <%= profile.name %>
            </h2>
            <p>
              <%= profile.about %>
            </p>
            <% } %>
        </div>
      </div>
    </div>
  </section>

  <% if (profile.education) { %>
    <section id="education" class="section">
      <div class="container">
        <h2>Education</h2>
        <p>
          <%= profile.education %>
        </p>
      </div>
    </section>
    <% } %>

      <% if (profile.jobTitle && profile.company && profile.workExperience) { %>
        <section id="work" class="section bg-light">
          <div class="container">
            <h2>Work Experience</h2>
            <h3>
              <%= profile.jobTitle %> - <%= profile.company %>
            </h3>
            <p>
              <%= profile.workExperience %>
            </p>
          </div>
        </section>
        <% } %>

          <section id="contact" class="section">
            <div class="container">
              <h2>Contact Me</h2>
              <p>You can reach out to me via email at <a href="mailto:<%= profile.email %>">
                  <%= profile.email %>
                </a>. Connect with me
                on social media:</p>
              <ul class="social-icons">
                <% if (profile.linkedin) { %>
                  <li><a href="<%= profile.linkedin %>" class="text-decoration-none"><i class="fab fa-linkedin"></i></a>
                  </li>
                  <% } %>
                    <% if (profile.instagram) { %>
                      <li><a href="<%= profile.instagram %>" class="text-decoration-none"><i
                            class="fab fa-instagram"></i></a>
                      </li>
                      <% } %>
                        <% if (profile.facebook) { %>
                          <li><a href="<%= profile.facebook %>" class="text-decoration-none"><i
                                class="fab fa-facebook"></i></a>
                          </li>
                          <% } %>
                            <% if (profile.phoneNumber) { %>
                              <li><a href="tel:<%= profile.phoneNumber %>" class="text-decoration-none"><i
                                    class="fas fa-phone"></i></a></li>
                              <% } %>
                                <% if (profile.whatsapp) { %>
                                  <li><a href="<%= profile.whatsapp %>" class="text-decoration-none"><i
                                        class="fab fa-whatsapp"></i></a></li>
                                  <% } %>
              </ul>
            </div>
          </section>



          <footer class="footer">
            <div class="container">
              <p>&copy; <%= profile.year %>
                  <%= profile.name %>. All rights reserved.</p>
            </div>
          </footer>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
          <script>
            const emergencyButton = document.getElementById('emergencyButton');
            const emergencyDetails = document.getElementById('emergencyDetails');

            emergencyButton.addEventListener('click', () => {
              if (emergencyDetails.style.display === 'none') {
                emergencyDetails.style.display = 'block';
              } else {
                emergencyDetails.style.display = 'none';
              }
            });
          </script>
</body>

</html>